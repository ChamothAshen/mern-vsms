<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Refund Report</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Refund Report</h1>
    <table>
        <thead>
            <tr>
                <th>User Name</th>
                <th>Service Name</th>
                <th>Refund Amount</th>
                <th>Refund Date</th>
            </tr>
        </thead>
        <tbody>
            <% refunds.forEach(function(refund) { %>
                <tr>
                    <td><%= refund.appointmentId.userId.username %></td>
                    <td><%= refund.appointmentId.serviceId.name %></td>
                    <td><%= refund.refundedAmount %></td>
                    <td><%= new Date(refund.dateIssued).toLocaleDateString() %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
